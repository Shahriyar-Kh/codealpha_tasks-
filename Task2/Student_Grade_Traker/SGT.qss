/* Main Window */
#main_window {
    background-color: #f0f4fb;
    font-family: "Segoe UI", sans-serif;
    font-size: 14px;
    color: #333;
}

/* Group Box */
QGroupBox#semester_group {
    border: 2px solid #dbe6f6;
    border-radius: 12px;
    margin-top: 15px;
    padding: 14px;
    background-color: #ffffff;
    box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.05);
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 6px 14px;
    font-weight: bold;
    font-size: 15px;
    color: #2b4f81;
    background-color: #e8f0fe;
    border-radius: 6px;
    margin-left: 8px;
}

/* Labels */
QLabel {
    font-size: 15px;
    color: #2f3e56;
    margin: 4px;
}

/* LineEdits */
QLineEdit {
    padding: 8px 12px;
    border-radius: 8px;
    border: 1px solid #c2cfe0;
    background-color: #fdfdfd;
    margin: 6px 0;
    font-size: 14px;
}

QLineEdit:focus {
    border: 1px solid #4a90e2;
    background-color: #ffffff;
}

/* Push Buttons */
QPushButton {
    background-color: #4a90e2;
    color: white;
    padding: 8px 16px;
    margin: 6px 6px 6px 0;
    border-radius: 8px;
    font-weight: 600;
    border: none;
    font-size: 14px;
}

QPushButton:hover {
    background-color: #357ab8;
    cursor: pointer;
    transform: scale(1.02);
}

QPushButton:pressed {
    background-color: #2c5f8a;
}

/* ScrollArea (if used) */
QScrollArea {
    border: none;
    background-color: transparent;
}

/* ComboBox (for future use) */
QComboBox {
    padding: 6px 10px;
    border: 1px solid #c2cfe0;
    border-radius: 6px;
    background-color: #ffffff;
    font-size: 14px;
}

QComboBox:hover {
    border: 1px solid #4a90e2;
}

/* QSpinBox (if used) */
QSpinBox {
    padding: 6px 10px;
    border: 1px solid #c2cfe0;
    border-radius: 6px;
    background-color: #ffffff;
}

/* Tooltip Styling */
QToolTip {
    background-color: #4a90e2;
    color: white;
    border: none;
    padding: 6px;
    border-radius: 4px;
    font-size: 13px;
}

/* Table (for future GPA records) */
QTableWidget {
    background-color: #ffffff;
    border: 1px solid #dbe6f6;
    border-radius: 8px;
    gridline-color: #e0e0e0;
    font-size: 13px;
}

QHeaderView::section {
    background-color: #4a90e2;
    color: white;
    padding: 8px;
    border: none;
    font-weight: bold;
}
